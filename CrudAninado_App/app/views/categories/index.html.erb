<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Category</th>
      <th>Cantidad de productos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.name, category %></td>
         <td><%= @product.where(category_id: category.id).count %></td>
        <td>   <button type="button" class="btn btn-primary"><%= link_to 'Show', category %></button></td>
        <td><button type="button" class="btn btn-info"><%= link_to 'Edit', edit_category_path(category) %> </button></td>
        <td><button type="button" class="btn btn-danger"><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

